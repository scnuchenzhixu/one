.body{
  width: 750rpx;
  height: 100vh;
  /* padding: 20rpx;
  box-sizing: border-box; */
}
.header{
  width: 100%;
  height: 140rpx;
  background-color: #5f357a;
  border-radius: 0 0 30rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header_tips{
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 17px;
  color: rgb(238, 246, 255);
}
.robot_img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.content{
  width: 100%;
  height: 800rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content_list{
  width: 700rpx;
  height: 250rpx;
  padding: 25rpx 20rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  border: 1px solid #5f357a;
  box-shadow: 3px 3px 3px #9203eb;
  margin-top: 35rpx;
  display: flex;
}
.content_img{
  width: 380rpx;
  height: 180rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 3px 3px 5px #918e8e;
}
.content_img image{
  width: 100%;
  height: 100%;
}
.content_text{
  width: 250rpx;
  height: 100%;
  margin-left: 30rpx;
}
.text_title{
  width: 100%;
  height: 120rpx;
  font-size: 17px;
  font-weight: 550;
}
.text_btn{
  width: 250rpx;
  height: 60rpx;
  border-radius: 35rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 14px;
  color: #fff;
  background-color: #9932CC;
  box-shadow: 2px 2px 3px #BA55D3;
}