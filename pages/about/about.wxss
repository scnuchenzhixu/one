.body{
  width: 100vw;
  height: auto;
  padding: 25rpx;
  box-sizing: border-box;
}
.system{
  width: 100%;
  height: 850rpx;
}
.title{
  width: 100%;
  height: 45rpx;
  display: flex;
}
.line {
  width: 10rpx;
  height: 45rpx;
  background-color: #5f357a;
}
.line-title {
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  color: #5f357a;
  margin-left: 20rpx;
}
.img{
  margin-top: 10rpx;
  width: 100%;
  height: 356rpx;
}
.content{
  text-indent:2em
}
.company{
  width: 100%;
  height: 1200rpx;
}
.about{
  width: 100%;
  height: 500rpx;
}
.list{
  width: 100%;
  height: 165rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #5f357a;
}
.list_img{
  width: 100rpx;
  height: 100rpx;
}
.list_content{
  width: 450rpx;
  font-size: 13px;
}
.goto{
  width: 100rpx;
  font-size: 12px;
  color: #5f357a;
}