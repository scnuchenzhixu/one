.body{
  width: 100vw;
  height: auto;
  padding: 25rpx;
  box-sizing: border-box;
  background-color: #ececec;
}
.header{
  width: 100%;
  height: 308rpx;
}
.header image{
  width: 100%;
  height: 100%;
}
.choose{
  width: 200rpx;
  height: 50rpx;
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  border-radius: 15rpx;
  overflow: hidden;
  border: 2px solid #5f357a;
}
.choose_name{
  width: 100rpx;
  height: 50rpx;
  font-size: 14px;
  text-align: center;
  line-height: 50rpx;
}
.select{
  background-color: #5f357a;
  color: #fff;
}
.select_none{
  background-color: #fff;
  color: #5f357a;
}
.list{
  width: 100%;
  height: auto;
  /* margin-top: 15rpx; */
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  overflow: scroll;
}
.list_detail{
  width: 45%;
  height: 500rpx;
  margin-top: 30rpx;
  position: relative;
  padding: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
  box-shadow: 1px 1px 5px rgb(87, 85, 85);
}
.list_img{
  width: 100%;
  height: 175rpx;
}
.list_title{
  width: 100%;
  height: 100rpx;
  font-size: 14px;
  text-align: center;
  /* line-height: 100rpx; */
  font-weight: 550;
}
.list_author{
  width: 200rpx;
  height: 50rpx;
  background: #5f357a;
  border-radius: 10rpx;
  color: #fff;
  font-size: 13px;
  text-align: center;
  line-height: 50rpx;
}
.list_time{
  width: 160rpx;
  height: 50rpx;
  margin-top: 5rpx;
  background: #5f357a;
  border-radius: 10rpx;
  color: #fff;
  font-size: 12px;
  text-align: center;
  line-height: 50rpx;
}
.list_money{
  width: 180rpx;
  height: 80rpx;
  position: relative;
  left: 100rpx;
  color: orange;
  font-size: 18px;
  text-align: center;
  line-height: 80rpx;
}
.list_to{
  position: absolute;
  font-size: 10px;
  color: #1296db;
  right: 8rpx;
  bottom: 8rpx;
}
.view_task,.require{
  width: 140rpx;
  height: 60rpx;
  font-size: 14px;
  text-align: center;
  line-height: 60rpx;
  color: #fff;
  opacity: 0.98;
  border-radius: 5rpx;
  position: fixed;
  right: 0
}
.view_task{
  top: 500rpx;
  background-color: #CCCC00;
}
.require{
  top: 580rpx;
  background-color: #FF9966;
}