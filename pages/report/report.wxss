.body{
  width: 100vw;
  height: 100vh;
  position: relative;
  /* padding: 20rpx 25rpx;
  box-sizing: border-box; */
}
.article{
  width: 90%;
  height: 1000rpx;
  position: relative;
  top: 20rpx;
  margin: 0rpx auto;
  padding: 15rpx;
  padding-bottom: 0;
  box-sizing: border-box;
  border-radius: 15rpx;
  border: 1px solid #5f357a;
  overflow: hidden;
}
.article_open{
  overflow: scroll;
  padding-bottom: 15rpx;
}
.article_show{
  width: 100%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  bottom: 0;
  background-color: rgba(255,255,255,0.9);
}
.mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.3);
}
.tips{
  width: 550rpx;
  height: 330rpx;
  border-radius: 10rpx;
  border: 1px solid #5f357a;
  background-color: #fff;
}
.tips_title{
  width: 100%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: #fff;
  background-color: #5f357a;
}
.tips_content{
  width: 100%;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  font-size: 14px;
}
.tips_choose{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.choose{
  width: 230rpx;
  height: 60rpx;
  border-radius: 20rpx;
  border: 1px solid #5f357a;
  color: #5f357a;
  text-align: center;
  line-height: 60rpx;
  font-size: 14px;
}
.chance{
  width: 100%;
  height: 50rpx;
  font-size: 12px;
  padding-left: 25rpx;
  line-height: 50rpx;
  color: gray;
}
.bottom{
  width: 100%;
  height: 100rpx;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.bottom_choose{
  background-color: #5f357a;
  color: #fff;
}