.body{
  width: 100vw;
  height: auto;
  padding: 10rpx 25rpx;
  box-sizing: border-box;
  background-color: #ececec;
}
.header{
  width: 100%;
  height: 750rpx;
  padding: 10rpx 25rpx;  
  box-sizing: border-box;
  border-radius: 8rpx;
  border: 1px solid #5f357a;
  background-color: #fff;
  box-shadow: 1px 1px 3px rgb(87, 85, 85);
}
.head_img{
  width: 600rpx;
  height: 300rpx;
  display: block;
  margin: 0 auto;
}
.title{
  width: 100%;
  height: auto;
  margin-top: 10rpx;
  text-align: center;
  font-size: 18px;
  font-weight: 550;
}
.content{
  width: 100%;
  height: 120rpx;
  overflow: scroll;
  color: gray;
  font-size: 12px;
}
.head_middle{
  width: 100%;
  height: 120rpx;
  position: relative;
  margin-top: 5rpx;
}
.author{
  width: 200rpx;
  height: 50rpx;
  position: absolute;
  right: 5rpx;
  background: #5f357a;
  border-radius: 10rpx;
  color: #fff;
  font-size: 13px;
  text-align: center;
  line-height: 50rpx;
}
.time{
  width: 160rpx;
  height: 50rpx;
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
  /* margin-top: 5rpx; */
  background: #5f357a;
  border-radius: 10rpx;
  color: #fff;
  font-size: 12px;
  text-align: center;
  line-height: 50rpx;
}
.price{
  width: 180rpx;
  height: 70rpx;
  position: absolute;
  left: 25rpx;
  bottom: -8rpx;
  color: orange;
  font-size: 20px;
  text-align: center;
  line-height: 70rpx;
}
.submit{
  width: 300rpx;
  height: 60rpx;
  margin: 15rpx auto;
  border-radius: 25rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 13px;
  background: #5f357a;
  color: #fff;
}
.task{
  width: 250rpx;
  height: 50rpx;
  position: relative;
  left: 420rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.task_text{
  width: 200rpx;
  height: 50rpx;
  text-align: center;
  font-size: 12px;
  line-height: 50rpx;
  color: #5f357a;
}
.task image{
  width: 40rpx;
  height: 40rpx;
}
.process{
  width: 100%;
  height: 1070rpx;
  position: relative;
  margin-top: 15rpx;
  padding: 10rpx 25rpx;  
  box-sizing: border-box;
  border-radius: 8rpx;
  border: 1px solid #5f357a;
  background-color: #fff;
  box-shadow: 1px 1px 3px rgb(87, 85, 85);
}
.process_title{
  font-size: 16px;
  color: #5f357a;
}
.process_img{
  width: 100%;
  height: 312rpx;
}
.detail_text{
  width: 100%;
  height: 600rpx;
  margin-top: 10rpx;
  padding: 10rpx 15rpx;
  box-sizing: border-box;
  box-shadow: 0px 0px 3px #5f357a;
}
.small{
  font-size: 13px;
}