.body{
  width: 750rpx;
}
.header{
  width: 100%;
  height: 300rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  border-radius: 0 0 100rpx 100rpx;
  background-image: linear-gradient(to right, #a18cd1 0%, #b37feb 100%);
}
.head_img{
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.head_img image{
  width: 30rpx;
  height: 30rpx;
}
.head_title{
  width: 550rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 16px;
  color: #fff;
}
.search{
  width: 600rpx;
  height: 100rpx;
  padding: 0rpx 15rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  right: 0;
  left: 0;
  margin: 0 auto;
  bottom: 65rpx;
  border-bottom: 2px solid rgba(255,180,0,0.5);
}
.search_input{
  width: 500rpx;
  height: 100%;
  color: #fff;
  /* font-size: 13px; */
}
.search image{
  width: 50rpx;
  height: 50rpx;
}
.condition{
  width: 100%;
  height: 100rpx;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.choose_plate{
  width: 360rpx;
  height: 100%;
  display: flex;
  justify-content: space-around;
}
.plate_img_text{
  width: 100rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.plate_img_text_select{
  border-bottom: 2px solid #b37feb;
}
.plate_img_text image{
  width: 40rpx;
  height: 40rpx;
}
.text_none{
  color: #707070;
  font-size: 13px;
}
.text_select{
  color: #b37feb;
}
.choose_about{
  width: 360rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.about{
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 13px;
  border: 1px solid #707070;
  border-radius: 10rpx;
  color: #707070;
}
.about_select{
  color: #fff;
  background-color: #b37feb;
}