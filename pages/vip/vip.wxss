.body{
  width: 100vw;
  height: 100vh;
}
.header{
  width: 100%;
  height: 300rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  border-radius: 0 0 30rpx 30rpx;
  background-image: linear-gradient(60deg, #29323c 0%, #485563 100%);
}
.head_img{
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.head_img image{
  width: 30rpx;
  height: 30rpx;
}
.head_title{
  width: 550rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 16px;
  color: #fff;
}
.card{
  width: 90%;
  height: 320rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: -130rpx;
  margin: 0 auto;
  border-radius: 25rpx;
  background-image: linear-gradient(to right,#232b45,#474d65);
  box-shadow:0px 0px 10px #000;
}