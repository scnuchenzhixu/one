.body{
  width: 750rpx;
  height: 100vh;
}
.login{
  width: 750rpx;
  height: 35vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 0 0 30rpx 30rpx;
  background-image: linear-gradient(to right, #a18cd1 0%, #5f357a 100%);
}
.title{
  width: 750rpx;
  height: 100rpx;
  font-size: 16px;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
}
.message{
  width: 300rpx;
  height: 300rpx;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.src_image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.src_image image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.nick_name{
  margin-top: 20rpx;
  font-size: 12px;
  color: #fff;
}
.application{
  width: 750rpx;
  height: 65vh;
  background-color: aliceblue;
}
.list{
  width: 750rpx;
  height: 120rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  transition: all 0.5s linear;
}
.app_icon{
  width: 45rpx;
  height: 45rpx;
}
.app_name{
  width: 160rpx;
  height: 45rpx;
  margin-left: 20rpx;
  font-size: 14px;
  line-height: 45rpx;
}
.go_to{
  width: 35rpx;
  height: 35rpx;
  position: relative;
  left: 450rpx;
}
.contact_btn {
  display: inline-block;
  position: absolute;
  width: 100%;
  background: salmon;
  opacity: 0;
}
.change{
  transform: scale(0.98,0.95);
  transition: all 0.5s linear;
}
.modal{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  overflow: hidden;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.screen{
  width: 400rpx;
  height: 420rpx;
  position: relative;
  top: 50rpx;
  background-color: #fff;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: space-around; */
  align-items: center;
  overflow: hidden;
}
.tip{
  width: 400rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 16px;
  font-weight: 550;
  background-image: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
}
.input{
  width: 340rpx;
  height: 80rpx;
  padding: 15rpx;
  margin: 60rpx auto;
  /* margin-bottom: 6rpx; */
  background-color: #fff;
  border-bottom: 1px solid gray;
  box-sizing: border-box;
}
.input_content{
  font-size: 13px;
}
.choose{
  position: relative;
  top: 10rpx;
  width: 400rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.choose_content{
  width: 150rpx;
  height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
}
.left{
  background-color: #8fd3f4;
}
.right{
  background-color: #fcb69f;
}
.change{
  transform: scale(0.95);
}